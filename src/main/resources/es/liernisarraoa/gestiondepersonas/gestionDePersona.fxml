<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane
        maxHeight="-Infinity"
        maxWidth="-Infinity"
        minHeight="-Infinity"
        minWidth="-Infinity"
        prefHeight="400.0"
        prefWidth="600.0"
        xmlns="http://javafx.com/javafx/22"
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="es.liernisarraoa.gestiondepersonas.Controlador.HelloController">

   <left>
      <!-- Definición del contenedor lateral izquierdo -->
      <VBox
              alignment="CENTER"
              prefHeight="400.0"
              prefWidth="186.0">
         <children>
            <!-- Definición de los componentes hijos del contenedor VBox -->
            <Label
                    text="Nombre :">
               <!-- Definición de un componente Label para mostrar el texto "Nombre :" -->
               <VBox.margin>
                  <Insets left="10.0"/>
               </VBox.margin>
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TextField
                    fx:id="nombreTextField">
               <!-- Definición de un componente TextField para ingresar el nombre -->
               <VBox.margin>
                  <Insets left="10.0" right="5.0" top="5.0" />
               </VBox.margin>
            </TextField>
            <Label
                    text="Apellido :">
               <!-- Definición de un componente Label para mostrar el texto "Apellido :" -->
               <VBox.margin>
                  <Insets left="10.0" top="5.0" />
               </VBox.margin>
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TextField
                    fx:id="apellidoTextField">
               <!-- Definición de un componente TextField para ingresar el apellido -->
               <VBox.margin>
                  <Insets left="10.0" right="5.0" top="5.0" />
               </VBox.margin>
            </TextField>
            <Label
                    text="Edad :">
               <!-- Definición de un componente Label para mostrar el texto "Edad :" -->
               <VBox.margin>
                  <Insets left="10.0" top="5.0" />
               </VBox.margin>
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TextField
                    fx:id="edadTextField">
               <!-- Definición de un componente TextField para ingresar la edad -->
               <VBox.margin>
                  <Insets left="10.0" right="5.0" top="5.0" />
               </VBox.margin>
            </TextField>
            <Button
                    fx:id="btnAniadirPersona"
                    mnemonicParsing="false"
                    onAction="#aniadirPersona"
                    text="Añadir persona">
               <!-- Definición de un componente Button para agregar una persona -->
               <VBox.margin>
                  <Insets left="45.0" top="20.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </left>
   <center>
      <!-- Definición del contenedor central -->
      <TableView
              fx:id="tablaPersonas"
              prefHeight="400.0"
              prefWidth="600.0"
              BorderPane.alignment="CENTER">
         <columns>
            <!-- Definición de las columnas de la tabla -->
            <TableColumn
                    id="nombre"
                    fx:id="columnaNombre"
                    minWidth="140.0"
                    maxWidth="Infinity"
                    text="Nombre" />
            <!-- Definición de la columna "Nombre" -->
            <!-- El atributo minWidth se establece en 140 para definir el ancho mínimo de la columna -->
            <!-- El atributo maxWidth se establece en Infinity para permitir que la columna se expanda -->
            <TableColumn
                    id="apellido"
                    fx:id="columnaApellido"
                    minWidth="190.0"
                    maxWidth="Infinity"
                    text="Apellido" />
            <!-- Definición de la columna "Apellido" -->
            <!-- El atributo minWidth se establece en 190 para definir el ancho mínimo de la columna -->
            <!-- El atributo maxWidth se establece en Infinity para permitir que la columna se expanda -->
            <TableColumn
                    id="edad"
                    fx:id="columnaEdad"
                    minWidth="75.0"
                    maxWidth="Infinity"
                    text="Edad" />
            <!-- Definición de la columna "Edad" -->
            <!-- El atributo minWidth se establece en 75 para definir el ancho mínimo de la columna -->
            <!-- El atributo maxWidth se establece en Infinity para permitir que la columna se expanda -->
         </columns>
         <BorderPane.margin>
            <Insets bottom="20.0" right="10.0" top="20.0" />
         </BorderPane.margin>
      </TableView>
   </center>
</BorderPane>
